<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#26283C"
    android:backgroundTint="#20222E"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#13131C"
       android:backgroundTint="#13131C"
       android:gravity="center_vertical"
       android:orientation="horizontal"
       android:padding="10dp">

      <androidx.cardview.widget.CardView
          android:layout_width="50dp"
          android:layout_height="50dp"
          app:cardCornerRadius="25dp"
          app:cardElevation="0dp"
          tools:visibility="gone">

         <ImageView
             android:id="@+id/photo"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#151825"
             android:backgroundTint="#151825"
             app:srcCompat="@android:drawable/ic_input_get" />
      </androidx.cardview.widget.CardView>

      <Space
          android:layout_width="15dp"
          android:layout_height="wrap_content" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

         <TextView
             android:id="@+id/nombre"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Nombre"
             android:textColor="#FBFBFB"
             android:textSize="20sp"
             android:textStyle="bold" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal">

            <TextView
                android:id="@+id/color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Color"
                android:textColor="#7E7777"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/edad"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edad"
                android:textColor="#7E7777"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/precio_vacuna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="v_price"
                android:textColor="#7E7777"
                android:textSize="16sp" />
         </LinearLayout>

      </LinearLayout>

      <ImageView
          android:id="@+id/btn_editar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="#1ECBE9"
          android:padding="5dp"
          app:srcCompat="@drawable/ic_edit" />

      <Space
          android:layout_width="10dp"
          android:layout_height="wrap_content" />

      <ImageView
          android:id="@+id/btn_eliminar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="#297A6E"
          android:padding="5dp"
          app:srcCompat="@drawable/ic_delete" />

   </LinearLayout>
</androidx.cardview.widget.CardView>